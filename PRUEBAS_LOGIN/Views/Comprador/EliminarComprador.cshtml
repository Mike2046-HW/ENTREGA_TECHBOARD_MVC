@model PRUEBAS_LOGIN.Models.Comprador

@{
    ViewBag.Title = "EliminarComprador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body>
    <!-- Sección de Compradores -->
    <div class="row mt-3">
        <div class="col-sm-12">
            <div class="card border-dark">
                <div class="card-header bg-dark text-white">
                    <h4>ELIMINAR COMPRADOR</h4>
                </div>
                <div class="card-body">

                    <div class="alert alert-danger">
                        ¿Desea eliminar a @Html.DisplayTextFor(m => m.Nombre_Empresa)? dicha acción no puede deshacerse.
                    </div>
                    <form action="@Url.Action("EliminarComprador","Comprador")" method="post">
                        <input type="hidden" class=" form-control" name="Comprador_Id" value="@Html.DisplayTextFor(m =>m.Comprador_Id)" />
                        <button type="submit" class="btn btn-danger mt-3">ELIMINAR</button>
                        <a class="btn btn-warning mt-3" href="@Url.Action("Compradores", "Comprador")">Regresar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
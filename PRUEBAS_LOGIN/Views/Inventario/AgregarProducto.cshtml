@model PRUEBAS_LOGIN.Models.Productos

@{
    ViewBag.Title = "Agregar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <!-- Sección para agregar nuevo producto -->
    <div class="card border-secondary shadow-lg">
        <!-- Encabezado -->
        <div class="card-header bg-dark text-white text-center">
            <h4 class="mb-0">AGREGAR NUEVO PRODUCTO</h4>
        </div>
        <!-- Cuerpo del formulario -->
        <div class="card-body">
            <form action="@Url.Action("AgregarProducto","Inventario")" method="post">
                <div class="row g-3">
                    <!-- Tipo de Producto -->
                    <div class="col-md-6">
                        <label for="nombreTipo" class="form-label">Tipo de Producto</label>
                        <select id="nombreTipo" class="form-select" name="Nombre_Tipo" required>
                            <option value="">Seleccione un tipo de producto</option>
                            @foreach (var item in ViewBag.TipoProductoList)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                    </div>

                    <!-- Nombre del Producto -->
                    <div class="col-md-6">
                        <label for="nombreProducto" class="form-label">Nombre de Producto</label>
                        <input type="text" id="nombreProducto" class="form-control" name="Nombre" required />
                    </div>

                    <!-- Cantidad -->
                    <div class="col-md-6">
                        <label for="cantidadProducto" class="form-label">Cantidad</label>
                        <input type="number" id="cantidadProducto" class="form-control" name="Cantidad" required min="1" />
                    </div>

                    <!-- Vendedor -->
                    <div class="col-md-6">
                        <label for="vendedor" class="form-label">Vendedor</label>
                        <select id="vendedor" class="form-select" name="Vendedor_Id" required>
                            <option value="">Seleccione un vendedor</option>
                            @foreach (var item in ViewBag.VendedoresList)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                    </div>
                </div>

                <!-- Botones -->
                <div class="mt-4 d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Registrar Producto
                    </button>
                    <a class="btn btn-danger" href="@Url.Action("Inventario","Inventario")">
                        <i class="bi bi-arrow-left"></i> Regresar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@model List<PRUEBAS_LOGIN.Models.Vendedor>

@{
    ViewBag.Title = "Vendedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <!-- Sección de Vendedores -->
    <div class="card border-dark shadow-lg">
        <!-- Encabezado -->
        <div class="card-header bg-dark text-white text-center">
            <h4 class="mb-0">VENDEDORES</h4>
        </div>
        <!-- Contenido -->
        <div class="card-body">
            <!-- Botón agregar vendedor -->
            <div class="mb-3 d-flex justify-content-between">
                <a class="btn btn-success" href="@Url.Action("RegistrarVendedor", "Vendedor")">
                    <i class="bi bi-plus-circle"></i> Agregar Vendedor
                </a>
            </div>

            <!-- Tabla -->
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>ID</th>
                            <th>Empresa</th>
                            <th>Email</th>
                            <th>Teléfono</th>
                            <th>IDdir</th>
                            <th>Calle</th>
                            <th>Ciudad</th>
                            <th>Estado</th>
                            <th>CP</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@item.Vendedor_Id</td>
                                <td>@item.Nombre_Empresa</td>
                                <td>@item.Correo_Electronico</td>
                                <td>@item.Telefono</td>
                                <td>@item.Direccion_Vendedor_Id</td>
                                <td>@item.Calle</td>
                                <td>@item.Ciudad</td>
                                <td>@item.Estado</td>
                                <td>@item.Codigo_Postal</td>
                                <td>
                                    <div class="d-flex gap-2 justify-content-center">
                                        <a class="btn btn-primary btn-sm" href="@Url.Action("EditarVendedor", "Vendedor", new { idvendedor = item.Vendedor_Id })">
                                            <i class="bi bi-pencil"></i> Editar
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="@Url.Action("EliminarVendedor", "Vendedor", new { idvendedor = item.Vendedor_Id })">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Mensaje de error -->
            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    @TempData["mensaje"]
                </div>
            }

            <!-- Botón regresar -->
            <div class="d-flex justify-content-start mt-4">
                <a class="btn btn-warning" href="@Url.Action("Pedido", "Pedido")">
                    <i class="bi bi-arrow-left"></i> Regresar
                </a>
            </div>
        </div>
    </div>
</div>
